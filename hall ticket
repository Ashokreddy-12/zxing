import java.util.Random;
import java.util.Scanner;
import java.io.File;
import java.io.IOException;
import java.awt.Desktop;
import net.glxn.qrgen.QRCode;
import net.glxn.qrgen.image.ImageType;

public class HallTicketGenerator {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Get user input for student details
        System.out.print("Enter student name: ");
        String name = scanner.nextLine();

        System.out.print("Enter exam center: ");
        String center = scanner.nextLine();

        // Generate a random ID for the hall ticket
        int id = generateRandomID();

        // Generate QR code with student details
        String qrText = "Name: " + name + "\nCenter: " + center + "\nID: " + id;
        generateQRCode(qrText);

        // Open the generated QR code image
        try {
            File qrCodeFile = new File("qrcode.png");
            Desktop.getDesktop().open(qrCodeFile);
        } catch (IOException e) {
            e.printStackTrace();
        }

        // Print hall ticket
        System.out.println("\nHall Ticket");
        System.out.println("Name: " + name);
        System.out.println("Center: " + center);
        System.out.println("ID: " + id);
    }

    private static int generateRandomID() {
        Random random = new Random();
        return 1000 + random.nextInt(9000);
    }

    private static void generateQRCode(String text) {
        File file = QRCode.from(text).to(ImageType.PNG).file(new File("qrcode.png"));
        System.out.println("QR Code generated successfully!");
    }
}
